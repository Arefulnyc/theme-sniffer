{
  "name": "theme-sniffer",
  "version": "0.2.0",
  "description": "Theme Sniffer plugin using sniffs. `WordPress-Theme` standard is used from WPTRT/WordPress-Coding-Standards.",
  "main": "",
  "browserslist": [
    "android >= 4.2",
    "not ie < 11",
    "last 2 versions"
  ],
  "dependencies": {
    "eslint-config-wordpress": "^2.0.0",
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "archiver": "^2.1.1",
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "mini-css-extract-plugin": "^0.4.0",
    "fs-extra": "^5.0.0",
    "node-sass": "^4.9.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "stylelint-config-wordpress": "^13.0.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15"
  },
  "scripts": {
    "preCommit": "eslint src/assets/scripts/*.js && stylelint \"src/assets/styles/**/*.scss\" --syntax scss && phpcs --standard=WordPress --extensions=php src/",
    "start": "webpack --progress --watch --display-error-details --display-modules --display-reasons",
    "postBuild": "./bin/build.js",
    "build": "NODE_ENV=production webpack --progress && npm run postBuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WPTRT/theme-sniffer.git"
  },
  "author": "WordPress Theme Review Team",
  "contributors": [
