{
  "name": "theme-sniffer",
  "version": "0.2.0",
  "description": "Theme Sniffer plugin using sniffs. `WordPress-Theme` standard is used from WPTRT/WordPress-Coding-Standards.",
  "main": "",
  "browserslist": [
    "android >= 4.2",
    "not ie < 11",
    "last 2 versions"
  ],
  "dependencies": {
    "eslint-config-wordpress": "^2.0.0",
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.18",
    "css-loader": "^0.28.10",
    "eslint": "^4.18.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "fs-extra": "^5.0.0",
    "style-loader": "^0.20.2",
    "stylelint": "^9.1.1",
    "stylelint-config-wordpress": "^12.0.0",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "webpack": "^3.11.0"
  },
  "scripts": {
    "preCommit": "eslint src/assets/scripts/*.js && stylelint \"src/assets/styles/**/*.scss\" --syntax scss && phpcs --standard=WordPress --extensions=php src/",
    "start": "webpack --progress --watch --display-error-details --display-modules --display-reasons",
    "postBuild": "./bin/build.js",
    "build": "NODE_ENV=production webpack --progress && npm run postBuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WPTRT/theme-sniffer.git"
  },
  "author": "WordPress Theme Review Team",
  "contributors": [
    {
      "name": "Nilambar Sharma"
    },
    {
      "name": "Ulrich Pogson"
    },
    {
      "name": "Denis Å½oljom"
    }
  ],
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/WPTRT/theme-sniffer/issues"
  },
  "homepage": "https://github.com/WPTRT/theme-sniffer#readme"
}
